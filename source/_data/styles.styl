//复制键
.copy-btn {
  color: #ffffff;
  if (hexo-config('codeblock.copy_button.style') == 'flat') {
    background: #000000;
  } 
}


.followme {
    color: #ffffff;
    text-align: center;
    background: #000000;
    border-left: 3px solid #ffffff;
}

//文章标题
.posts-expand .post-title-link {
  color: #ffffff;
}

//菜单栏标签
.menu-item {
  a, span.exturl {
    color: #ffffff;
    &:hover {
      background: #5c5c5c;
    }
  }
}
.menu .menu-item a {
    text-align: center;
}
.menu-item a:hover, .menu-item a.menu-item-active {
    background: #5c5c5c;
}

//页码
.pagination .page-number.current {
    background: #101010;
    border-color: #ccc;
    color: #ffffff;
}

//标签云
.tag-cloud {
  a {
    display: inline-block;
    border-bottom-color: #ffffff;
    //margin: 20px;
    color: #ffffff;
    &:hover {
      color: #5c5c5c !important;
    }
  }
}

//文章底部标签
.posts-expand .post-tags a {
    background: #000000;
    &:hover {
    	background: #5c5c5c;
    	color: #1c1c1c;
    }
}

//分类标签
.category-all-page .category-list {
    list-style: none;
    margin: 0;
    padding: 0;
    a {
	    color: #ffffff;
	    &:hover {
	    	background: #5c5c5c;
    		color: #1c1c1c;
	    }
	}
}

.posts-collapse .post-content .collection-title {
    display: none;
}

//表格表头
table {
  background: #000000;
  border-collapse: collapse;
  border-spacing: 0;
  font-size: $table-font-size;
  margin: 0 0 20px 0;
  width: 100%;
}
//表格主体
tbody tr {
  background: #000000;
  &:nth-of-type(odd) {
    background: #000000;
  }

  &:hover {
    background: #1c1c1c;
  }
}