//header
.header  {
  width: 0%;
  background: #000000;
}

.header-inner {
  background: #000000;
  align-items: center;
  display: flex;
  padding: 20px 0;

  +mobile() {
    background: #000000;
    display: block;
    padding: 10px 0;
    width: auto;
  }
}


//footer
.footer  {
  width: 0%;
  background: #000000;
}
.footer-inner {
  display: none;
    text-align: right;
}

.with-love {
  display: none;
}


// 文章内链接文本样式 
.post-body p a{
    color: #9c9c9c;
    border-bottom: none;
    border-bottom: 1px solid #9c9c9c;
    //悬停
    &:hover {
        color: #5c5c5c;
        border-bottom: none;
        border-bottom: 1px solid #5c5c5c;
    }
}

// 修改选中字符的颜色
/* webkit, opera, IE9 */
::selection {
    background: #1c1c1c;
    color: #9c9c9c;
}
/* firefox */
::-moz-selection {
    background: #1c1c1c;
    color: #9c9c9c;
}

//背景
body {
    background-color: #000000;
}

//阅读全文按钮样式
.post-button .btn{
    color: #ffffff;
}

//全局字体颜色
* {
  color: #ffffff;
}

// 修改按键（button）样式
.btn {
  background: #000000;
  border: 2px solid #ffffff;
  border-radius: $btn-default-radius;
  color: #5c5c5c;
  display: inline-block;
  font-size: $font-size-small;
  line-height: 2;
  padding: 0 20px;
  text-decoration: none;
  transition-property: background-color;
  the-transition();
  // 按键（button）点击时样式
  &:hover {
    border-color: #000000;
  	color: #ffffff;
 	background: #5c5c5c;
  }

  + .btn {
    margin: 0 0 8px 8px;
  }

  .fa-fw {
    text-align: left;
    width: (18em / 14);
  }
}



header.post-header {
  width: auto ;
}
.container .main-inner { width: 80%; }
.content-wrap { width: calc(100% - 260px); }
.header {
  +tablet() {
    width: auto !important;
  }
  +mobile() {
    width: auto ;
  }
}
.container .main-inner {
  +tablet() {
    width: auto !important;
  }
  +mobile() {
    width: auto ;
  }
}
.content-wrap {
  +tablet() {
    width: 100% !important;
  }
  +mobile() {
    width: 100% ;
  }
}

//Title-line
i {
  background: #ffffff !important;
  display: block;
  height: 0px;
  position: relative;
}

